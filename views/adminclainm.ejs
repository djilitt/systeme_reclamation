                    <script>
           // set the date after which the button should be disabled
let disableDate = new Date('<%= lastDuration %>');
const currentDate = new Date();
const options = {
  day: '2-digit',
  month: '2-digit',
  year: 'numeric',
  timeZone: 'Africa/Nouakchott',

};
var formattedDate = currentDate.toLocaleDateString('en-US', options);
var today = new Date(formattedDate);
console.log(typeof today );
console.log(typeof disableDate);
// get the button and message elements
let myButton = document.getElementById('submit-btn');
let message = document.getElementById('message');

// add click event listener to the button
myButton.addEventListener('click', function() {
  // check if the disable date has passed
  if (disableDate.getTime() > today.getTime()) {
    // disable the button
    message.style.display = "block";
    // Trigger the notification using the NotificationApp plugin
    $.NotificationApp.send(
      "Reclamation",
      "an Email is sent to the student",
      "top-right",
      "#f53867",
      "fas fa-info-circle"
    );

   
  }
 
});
    

</script>

